@section scripts{

    <script>
        $(function () {
            $("img.lazy").lazyload({
                effect: "fadeIn"
            });
        });

        $(window).load(function () {
            $(".tct2 ul li").click(function () {
                $(".tct2 ul li").removeClass("vc_active");
                $(this).addClass("vc_active");
                $(".tableCt").hide();
                $('#' + $(this).attr("table-data")).show();
            });
        });
    </script>
}
