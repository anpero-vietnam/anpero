@using AnperoFrontend.WebService;
@{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }
}
<div id="page">
    
    <footer>
        <!-- BEGIN INFORMATIVE FOOTER -->
        <div class="footer-inner">
      
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-xs-12 col-lg-4">
                        <div class="co-info">
                            <div><a href="/"><img src="@commonInfo.Logo" alt="footer logo"></a></div>
                            <address>
                                <div><em class="icon-location-arrow"></em> <span>@commonInfo.Address</span></div>
                                <div> <em class="icon-mobile-phone"></em><span> @Anpero.StringHelpper.ToPhoneNumberFormat(commonInfo.HotLine)</span></div>
                                <div> <em class="icon-envelope"></em><span>@commonInfo.Email</span></div>
                            </address>
                            <div class="social">
                                <ul class="link">
                                    @if (!string.IsNullOrEmpty(commonInfo.Skype) || !string.IsNullOrEmpty(commonInfo.FaceBookLink))
                                    {
                                        string thisUrl = HttpContext.Current.Request.Url.AbsoluteUri;

                                        if (!string.IsNullOrEmpty(commonInfo.FaceBookLink))
                                        {
                                            <li class="fb pull-left"><a target="_blank" rel="nofollow" href="http://www.facebook.com/share.php?u=@commonInfo.FaceBookLink&title=@commonInfo.Desc" title="Facebook"></a></li>

                                        }
                                        if (!string.IsNullOrEmpty(commonInfo.Skype))
                                        {
                                            <li class="skype pull-left"><a target="_blank" rel="nofollow" href="skype:@commonInfo.Skype?call" title="skype"></a></li>

                                        }
                                        <li class="tw pull-left"><a target="_blank" rel="nofollow" href="http://www.twitter.com/share?url=@thisUrl" title="Twitter"></a></li>
                                        <li class="googleplus pull-left"><a target="_blank" rel="nofollow" href="https://plus.google.com/share?url=@thisUrl" title="GooglePlus"></a></li>
                                        @*<li class="rss pull-left"><a target="_blank" rel="nofollow" href="#" title="RSS"></a></li>*@
                                        <li class="pintrest pull-left"><a target="_blank" rel="nofollow" href="http://pinterest.com/pinthis?url=@thisUrl" title="PInterest"></a></li>
                                        @*<li class="linkedin pull-left"><a target="_blank" rel="nofollow" href="#" title="Linkedin"></a></li>*@
                                        @*<li class="youtube pull-left"><a target="_blank" rel="nofollow" href="#" title="Youtube"></a></li>*@
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-8 col-xs-12 col-lg-8">
                        <div class="footer-column">
                            <h4>Sản phẩm</h4>
                            <ul class="links">
                                @if (commonInfo.ProductCategoryList != null && commonInfo.ProductCategoryList.Length > 0)
                                {
                                    foreach (var item in commonInfo.ProductCategoryList)
                                    {
                                        if (item.Id == 182 || item.Id == 183)
                                        {
                                            <li><a href="@Anpero.StringHelpper.GetParentCategoryLink(item.Name,item.Id)?view=gallery" alter="@item.Name">@item.Name</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="@Anpero.StringHelpper.GetParentCategoryLink(item.Name,item.Id)" alter="@item.Name">@item.Name</a></li>
                                        }

                                    }
                                }

                            </ul>
                        </div>
                        <div class="footer-column">
                            <h4>Thông tin</h4>
                            <ul class="links">

                                <li><a title="contact" href="/home/contact">Liên hệ</a></li>
                                <li><a title="about" href="/about">Về chúng tôi</a></li>
                                <li><a title="blog" href="/blog">Blogs</a></li>
                                <li><a title="Chính sách vận chuyển" href="/shippolicy">Chính sách vận chuyển</a></li>
                                <li><a title="Chính sách bảo hành" href="/WarrantyPolicy">Chính sách bảo hành</a></li>
                                <li><a title="Chính sách đổi trả" href="/ProductReturnPolicy">Chính sách đổi trả</a></li>
                                <li><a title="Chính sách bảo mật" href="/PrivacyPolicy">Chính sách bảo mật</a></li>
                                <li><a title="Hướng dẫn thanh toán" href="/PaymentInfo">Hướng dẫn thanh toán</a></li>
                            </ul>
                        </div>
                        <div class="footer-column">
                            @if (!string.IsNullOrEmpty(commonInfo.FaceBookLink))
                            {

                                <div class="fb-page"
                                     data-tabs="messages"
                                     data-href="@Html.Raw(commonInfo.FaceBookLink)"
                                     data-height="320"
                                     data-hide-cover="false">
                                </div>
                            }
                        </div>
                    </div>

                    <!--col-sm-12 col-xs-12 col-lg-8-->
                    <!--col-xs-12 col-lg-4-->
                </div>
                <!--row-->
            </div>

            <!--container-->
        </div>
        <!--footer-inner-->

        <div class="footer-middle">
            <div class="container">
                <div class="row">
                    <div class="row"> </div>
                </div>
                <!--row-->
            </div>
            <!--container-->
        </div>
        <!--footer-middle-->
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-xs-12 coppyright">© 2016 Kientrucbonmua. All Rights Reserved. Power by Anpero</div>

                </div>
                <!--row-->
            </div>
            <!--container-->
        </div>
        <!--footer-bottom-->
        <!-- BEGIN SIMPLE FOOTER -->
    </footer>
</div>

