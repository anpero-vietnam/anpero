@using AnperoFrontend.WebService;

@{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }
}

@if (ViewData["productList"] != null)
{
    AnperoFrontend.WebService.SearchResult productList = (AnperoFrontend.WebService.SearchResult)ViewData["productList"];
    if (productList.Item.Length > 0)
    {
        @section health{
            <meta name="description" content="@commonInfo.Desc" />
            <meta name="keywords" content="Thực phẩm sạch, Hoa quả sạch, Ngon Lành, Ngon Sạch, Uy tín, Bơ sạch, Bơ Sáp, Bơ Booth" />
            <meta property="og:description" content="@commonInfo.Desc" />
            <meta property="og:title" content="@productList.Item[0].ParentCatName" />
            <meta property="og:type" content="website" />
            <meta property="og:url" content="ngonlanh.vn" />
            <meta property="og:image" content="@commonInfo.Logo" />
        }
        <div id="page">
            <div class="page-heading">
                <div class="breadcrumbs">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12">
                                <ul>
                                    <li class="home"> <a href="/" title="Trang chủ">Trang chủ</a> <span>—› </span> </li>
                                    @if (ViewBag.isParent != null)
                                    {
                                        <li class="category1599">
                                            <a href="@Anpero.StringHelpper.GetParentCategoryLink(productList.Item[0].ParentCatName, productList.Item[0].ParentId)" title="@productList.Item[0].ParentCatName">
                                                @productList.Item[0].ParentCatName
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="category1599">
                                            <a href="@Anpero.StringHelpper.GetParentCategoryLink(productList.Item[0].ParentCatName, productList.Item[0].ParentId)" title="@productList.Item[0].ParentCatName">
                                                @productList.Item[0].ParentCatName
                                            </a>
                                            <span>—› </span>
                                        </li>
                                        <li class="category1601"> <strong>@productList.Item[0].CatName</strong> </li>
                                    }
                                </ul>
                            </div>
                            <!--col-xs-12-->
                        </div>
                        <!--row-->
                    </div>
                    <!--container-->
                </div>
                <div class="page-title">
                    <h2>Sản phẩm</h2>
                </div>
            </div>
            <!-- BEGIN Main Container col2-left -->
            <section class="main-container col2-left-layout bounceInUp animated">
                <!-- For version 1, 2, 3, 8 -->
                <!-- For version 1, 2, 3 -->
                <div class="container">
                    <div class="row">
                        <div class="col-main col-sm-9 col-sm-push-3">
                            <div class="pro-coloumn">
                                <article class="col-main">
                                    <div class="toolbar">
                                        <div id="sort-by">
                                            <label class="left">Sắp xếp: </label>
                                            <ul>
                                                <li>
                                                    <a href="#">Tên<span class="right-arrow"></span></a>
                                                    <ul>
                                                        <li><a href="#">Tên</a></li>
                                                        <li><a href="#">Giá</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                            <a class="button-asc left" href="#" title="Set Descending Direction"><span class="top_arrow"></span></a>
                                        </div>
                                        <div class="pager">
                                            <div id="limiter">
                                                <label>View: </label>
                                                <ul>
                                                    <li>
                                                        <a href="#">15<span class="right-arrow"></span></a>
                                                        <ul>
                                                            <li><a href="#">20</a></li>
                                                            <li><a href="#">30</a></li>
                                                            <li><a href="#">35</a></li>
                                                        </ul>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="pages">
                                                <label>Trang:</label>
                                                <ul class="pagination">
                                                    <li><a href="#">&laquo;</a></li>
                                                    <li class="active"><a href="#">1</a></li>
                                                    <li><a href="#">2</a></li>
                                                    <li><a href="#">3</a></li>
                                                    <li><a href="#">&raquo;</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="category-products">
                                        <ol class="products-list" id="products-list">
                                            @foreach (AnperoFrontend.WebService.ProductItem item in productList.Item)
                                            {
                                                <li class="item first">
                                                    <div class="product-image">
                                                        <a href="@Anpero.StringHelpper.GetProductLink(item.PrName,item.Id)" title="@item.PrName">
                                                            <img class="small-image" src="@item.Images" alt="@item.PrName">
                                                        </a>
                                                    </div>
                                                    <div class="product-shop">
                                                        <h2 class="product-name">
                                                            <a href="@Anpero.StringHelpper.GetProductLink(item.PrName,item.Id)" title="@item.PrName">@item.PrName</a>
                                                        </h2>
                                                        <div class="ratings">
                                                            <div class="rating-box">
                                                                <div style="width:50%" class="rating"></div>
                                                            </div>
                                                            <p class="rating-links"> <a href="#/review/product/list/id/167/category/35/">1 Nhận xét</a> <span class="separator">|</span> <a href="#review-form">Thêm nhận xét</a> </p>
                                                        </div>
                                                        <div class="desc std">
                                                            <p>
                                                                @item.ShortDesc
                                                            </p>
                                                            <p>
                                                                <a class="link-learn" title="" href="@Anpero.StringHelpper.GetProductLink(item.PrName,item.Id)">Chi tiết</a>
                                                            </p>
                                                        </div>
                                                        <div class="price-box">
                                                            <p class="old-price"> <span class="price-label"></span> <span id="old-price-212" class="price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.Price)0</span> </p>
                                                            <p class="special-price"> <span class="price-label"></span> <span id="product-price-212" class="price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(@item.SalePrice)0</span> </p>
                                                        </div>
                                                        <div class="actions">
                                                            <button class="button btn-cart ajx-cart" title="Mua ngay" type="button"><span>Mua ngay</span></button>
                                                            <span class="add-to-links">
                                                                <a title="Thêm vào giỏ hàng" class="button link-wishlist" href="#"><span>Thêm vào giỏ hàng</span></a>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                        </ol>
                                    </div>
                                </article>
                            </div>
                        </div>
                        <aside class="col-left sidebar col-sm-3 col-xs-12 col-sm-pull-9 wow bounceInUp animated">
                            <!-- BEGIN SIDE-NAV-CATEGORY -->
                            <div class="side-nav-categories">
                                <div class="block-title"> Danh mục sản phẩm </div>
                                <!--block-title-->
                                <!-- BEGIN BOX-CATEGORY -->
                                <div class="box-content box-category">
                                    <ul>
                                        @if (commonInfo.ProductCategoryList != null && commonInfo.ProductCategoryList.Length > 0)
                                        {
                                        <!--level0 current-->
                                            <li>
                                                <a class="active" href="@Anpero.StringHelpper.GetParentCategoryLink(productList.Item[0].ParentCatName, productList.Item[0].ParentId)">
                                                    @productList.Item[0].ParentCatName
                                                </a>
                                                <span class="subDropdown minus"></span>
                                                <ul class="level0_415" style="display:block">
                                                    @foreach (var p in commonInfo.ProductCategoryList.Where(p => p.Id == productList.Item[0].ParentId))
                                                    {
                                                        foreach (var child in p.ChildCategory)
                                                        {
                                                            <li>
                                                                <a href="@Anpero.StringHelpper.GetCategoryLink(child.Name, child.Id)">@child.Name</a>
                                                            </li>
                                                        }
                                                    }
                                                </ul>
                                            </li>
                                        <!--level0 other-->
                                            foreach (var item in commonInfo.ProductCategoryList.Where(item => item.Id != productList.Item[0].ParentId))
                                            {
                                                if (item.ChildCategory != null && item.ChildCategory.Length == 0)
                                                {
                                                    <li> <a href="@Anpero.StringHelpper.GetParentCategoryLink(item.Name,item.Id)">@item.Name‎</a> </li>
                                                }
                                                else
                                                {
                                                    <li>
                                                        <a href="@Anpero.StringHelpper.GetParentCategoryLink(item.Name, item.Id)">@item.Name</a> <span class="subDropdown plus"></span>
                                                        <ul class="level0_482" style="display:none">
                                                            @foreach (var chidItem in item.ChildCategory)
                                                            {
                                                                <li>
                                                                    <a href="@Anpero.StringHelpper.GetCategoryLink(chidItem.Name, chidItem.Id)">
                                                                        @chidItem.Name
                                                                    </a>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                            }
                                        }
                                        <!--level 0-->
                                    </ul>
                                </div>
                                <!--box-content box-category-->
                            </div>

                            <div class="block block-layered-nav">
                                <div class="block-title"> Sắp xếp </div>
                                <div class="block-content">
                                    <p class="block-subtitle">Shopping Options</p>
                                    <dl id="narrow-by-list">
                                        <dt class="odd">Category</dt>
                                        <dd class="odd">
                                            <ol>
                                                <li> <a href="#"> Salad <span class="count">(24)</span> </a> </li>
                                                <li> <a href="#"> Soups <span class="count">(24)</span> </a> </li>
                                                <li> <a href="#"> Fast Food <span class="count">(24)</span> </a> </li>
                                                <li> <a href="#"> Sandwiches <span class="count">(24)</span> </a> </li>
                                            </ol>
                                        </dd>
                                        <dt class="last odd">Price</dt>
                                        <dd class="last odd">
                                            <ol>
                                                <li> <a href="#"> <span class="price">$0.00</span> - <span class="price">$99.99</span> <span class="count">(26)</span> </a> </li>
                                                <li> <a href="#"> <span class="price">$100.00</span> and above <span class="count">(3)</span> </a> </li>
                                            </ol>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            @if (ViewData["slide3"] != null)
                            {
                                Ads[] slide = (Ads[])ViewData["slide3"];
                                if (slide.Length > 0)
                                {
                                    <div class="custom-slider">
                                        <div>
                                            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                                <ol class="carousel-indicators">
                                                    @for (int i = 0; i < slide.Length; i++)
                                                    {
                                                        if (i == 0)
                                                        {
                                                            <li class="active" data-target="#carousel-example-generic" data-slide-to="0"></li>
                                                        }
                                                        else if (i < 3)
                                                        {
                                                            <li data-target="#carousel-example-generic" data-slide-to="@i" class=""></li>
                                                        }
                                                    }
                                                </ol>
                                                <div class="carousel-inner">
                                                    @for (int i = 0; i < slide.Length; i++)
                                                    {

                                                        if (i == 0)
                                                        {
                                                            <div class="item active">
                                                                <img src="@slide[i].ImagesUrl" alt="@slide[i].Description" />
                                                                <div class="carousel-caption">
                                                                    @Html.Raw(slide[i].Description)
                                                                </div>
                                                            </div>
                                                        }
                                                        else if (i < 3)
                                                        {
                                                            <div class="item">
                                                                <img src="@slide[i].ImagesUrl" alt="@slide[i].Description" />
                                                                <div class="carousel-caption">
                                                                    @Html.Raw(slide[i].Description)
                                                                </div>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev"> <span class="sr-only">Previous</span> </a> <a class="right carousel-control" href="#carousel-example-generic" data-slide="next"> <span class="sr-only">Next</span> </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            <!--My Card-->
                            <div class="block block-list block-cart">
                                <div class="block-title"> Giỏ hàng </div>
                                <div class="block-content">
                                    <div class="summary">

                                        <p class="subtotal"> <span class="label">Giá trị SP:</span> <span class="price" id="lpr"></span> </p>
                                    </div>
                                    <div class="ajax-checkout">
                                        <button type="button" title="Checkout" class="button button-checkout" onclick="#"> <span>Gửi đơn hàng</span> </button>
                                    </div>
                                    <ul id="cart-sidebar2" class="mini-products-list"></ul>
                                </div>
                            </div>
                            <!--End My Card-->
                            <div class="hot-banner">
                                @if (ViewData["slide3"] != null)
                                {
                                    Ads[] slide = (Ads[])ViewData["slide3"];
                                    if (slide.Length > 0)
                                    {
                                        <img src="@slide.LastOrDefault().ImagesUrl" alt="banner">
                                    }
                                }
                            </div>
                        </aside>
                        <!--col-right sidebar-->
                    </div> <!--row-->
                </div><!--container-->
            </section> <!--main-container col2-left-layout-->
        </div>
        <!-- For version 1,2,3,4,6 -->
    }
}
            
