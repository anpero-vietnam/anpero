@{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }
    string themeOptionText = "option6";
    int themeOption = commonInfo.ThemeOption;
    switch (themeOption)
    {
        case 1:
            themeOptionText = "option6";
            break;
        case 2:
            themeOptionText = "option5";
            break;
        case 3:
            themeOptionText = "home option2";
            break;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <meta property="og:locale" content="vi_VN" />
    <meta property="og:type" content="website" />
    <meta name="distribution" content="Global" />
    <meta name="revisit-after" content="1 days" />
    <meta http-equiv="REFRESH" content="1800" />
    <meta name="robots" content="index,follow,all" />
    <meta property="og:title" content="@ViewBag.Title" />
    @RenderSection("health", required: false)
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/assets/css/responsive.css" />
    @if (themeOption == 2)
    {
        <link href="/assets/lib/jquery-bxslider/jquery-bxslider.css" rel="stylesheet" />
    }
    <link rel="stylesheet" type="text/css" href="/assets/css/@(themeOptionText+".css")" />


</head>
<body class="@themeOptionText">
    <div id="header" class="header">
        @*<div class="top-header">
                <div class="container">
                    @if (!string.IsNullOrEmpty(commonInfo.HotLine))
                    {
                        <div class="currency"><a href="tel:@commonInfo.HotLine"><strong>Hotline: @commonInfo.HotLine - 0961614240 </strong></a></div>
                    }
                    @if (!string.IsNullOrEmpty(commonInfo.Skype) || !string.IsNullOrEmpty(commonInfo.FaceBookLink))
                    {
                        <div class="top-bar-social">
                            @if (!string.IsNullOrEmpty(commonInfo.Skype))
                            {
                                <a href="skype:@commonInfo.Skype?call"><i class="fa fa-skype"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(commonInfo.FaceBookLink))
                            {
                                <a href="http://www.facebook.com/share.php?u=@commonInfo.FaceBookLink&title=@commonInfo.Desc" target="_blank"><i class="fa fa-facebook"></i></a>
                            }
                        </div>
                    }
                    <div class="support-link">
                        <a href="/thong-tin-cua-hang-a60">Thông tin cửa hàng</a>
                        <a href="/home/contact">Liên hệ</a>
                    </div>
                </div>
            </div>*@

        @switch (commonInfo.ThemeOption)
        {
            case 2:
                Html.RenderPartial("_partial/_MainHeader_2");
                break;
            default:
                Html.RenderPartial("_partial/_MainHeader_1");
                break;
        }
        <div id="nav-top-menu" class="nav-top-menu">
            <div class="container">
                <div class="row">
                    <div id="main-menu" class="col-sm-9 main-menu">
                        <nav class="navbar navbar-default">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                        <i class="fa fa-bars"></i>
                                    </button>
                                    <a class="navbar-brand" href="#">MENU</a>
                                </div>
                                <div id="navbar" class="navbar-collapse collapse">
                                    <ul class="nav navbar-nav">
                                        <li class="active"><a href="/">Home</a></li>
                                        @if (commonInfo.MenuList != null)
                                        {
                                            for (int i = 0; i < commonInfo.MenuList.Length; i++)
                                            {
                                                if (commonInfo.MenuList[i].ChidMenu != null && commonInfo.MenuList[i].ChidMenu.Length > 0)
                                                {

                                        <li class="dropdown">
                                            <a href="@commonInfo.MenuList[i].Link" data-toggle="dropdown">@commonInfo.MenuList[i].Tittle</a>
                                            <ul class="dropdown-menu container-fluid">
                                                <li class="block-container">
                                                    <ul class="block">
                                                        @for (int j = 0; j < commonInfo.MenuList[i].ChidMenu.Length; j++)

                                                                    {
                                                                    <li class="link_container"><a href="@commonInfo.MenuList[i].ChidMenu[j].Link">@commonInfo.MenuList[i].ChidMenu[j].Tittle</a></li>
                                                                    }
                                                    </ul>
                                                </li>
                                            </ul>
                                        </li>
                                                }
                                                else
                                                {
                                        <li>
                                            <a href="@commonInfo.MenuList[i].Link">@commonInfo.MenuList[i].Tittle</a>
                                        </li>
                                                }
                                            }
                                        }
                                        <li><a href="/blog">Blogs</a></li>
                                    </ul>
                                    <ul class="nav navbar-nav navbar-right">
                                        <li><a class="link-buytheme" href="tel:@commonInfo.HotLine"> <strong>Đặt hàng: @commonInfo.HotLine - 0961614240</strong> </a></li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>

                <div id="form-search-opntop"></div>
                <!-- userinfo on top-->
                <div id="user-info-opntop"></div>
                <!-- CART ICON ON MMENU -->
                <div id="shopping-cart-box-ontop">
                    <i class="fa fa-shopping-cart"></i>
                    <div class="shopping-cart-box-ontop-content"></div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Html.Raw(commonInfo.AnperoPlugin)
    @RenderSection("scripts", required: false)
    @Html.Raw(commonInfo.PageScript)
    <footer id="footer">
        <div class="container">
            @Html.Raw(commonInfo.Footer)
            <div id="introduce-box" class="row">
                <div class="col-md-4">
                    <div id="address-box">
                        <a href="/"><img src="@commonInfo.Logo" alt="logo"></a>
                        <div id="address-list">
                            <div class="tit-name">Địa chỉ:</div>
                            <div class="tit-contain">@commonInfo.Address</div>
                            <div class="tit-name">Phone:</div>
                            <div class="tit-contain">@commonInfo.HotLine</div>

                            @if (!string.IsNullOrEmpty(commonInfo.Email))
                            {
                                <div class="tit-name">Email:</div>
                                <div class="tit-contain">@commonInfo.Email</div>
                            }

                            @if (!string.IsNullOrEmpty(commonInfo.Skype))
                            {
                                <div class="tit-name">Skype:</div>
                                <div class="tit-contain"><a href="skype:@commonInfo.Skype?call"></a> @commonInfo.Skype</div>
                            }

                        </div>
                        @if (!string.IsNullOrEmpty(commonInfo.Skype) || !string.IsNullOrEmpty(commonInfo.FaceBookLink))
                        {
                            string thisUrl = HttpContext.Current.Request.Url.AbsoluteUri;
                            <div class="introduce-title" style="margin-top:10px;">Chia sẻ với bạn bè</div>
                            <div class="social-link">
                                @if (!string.IsNullOrEmpty(commonInfo.FaceBookLink))
                                {
                                    <a href="http://www.facebook.com/share.php?u=@commonInfo.FaceBookLink&title=@commonInfo.Desc" target="_blank"><i class="fa fa-facebook"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(commonInfo.Skype))
                                {
                                    <a href="skype:@commonInfo.Skype?call"><i class="fa fa-skype"></i></a>
                                }
                                
                                <a href="https://plus.google.com/share?url=@thisUrl" target="_blank"><i class="fa fa-google-plus"></i></a>
                                <a href="http://pinterest.com/pinthis?url=@thisUrl" target="_blank"><i class="fa fa-pinterest-p"></i></a>
                                <a href="http://www.twitter.com/share?url=@thisUrl" target="_blank"><i class="fa fa-twitter"></i></a>
                            </div>
                        }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="introduce-title">Danh mục chính</div>
                                @if (commonInfo.ProductCategoryList != null && commonInfo.ProductCategoryList.Length > 0)
                                {
                                    <ul id="introduce-company" class="introduce-list">
                                        @foreach (var item in commonInfo.ProductCategoryList)
                                        {
                                            <li><a href="@Anpero.StringHelpper.GetParentCategoryLink(item.Name,item.Id)" alter="@item.Name">@item.Name</a></li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <div id="contact-box" style="text-align: right;">
                            @if (!string.IsNullOrEmpty(commonInfo.FaceBookLink))
                            {

                                <div class="fb-page"
                                     data-tabs="messages"
                                     data-href="@Html.Raw(commonInfo.FaceBookLink)"
                                     data-width="500"
                                     data-height="300"
                                     data-hide-cover="false"></div>
                            }

                        </div>

                    </div>
                </div>

                <div id="footer-menu-box">
                    <div class="col-sm-12">
                        <ul class="footer-menu-list">
                            <li><a href="/gioi-thieu-b76">Giới thiệu về chúng tôi</a></li>
                            @*<li><a href="/home/about">Giới thiệu về chúng tôi</a></li>*@
                        </ul>
                    </div>
                    <div class="col-sm-12">
                        <ul class="footer-menu-list">
                            <li><a href="/chinh-sach-van-chuyen-a66">Chính sách vận chuyển</a></li>
                            <li><a href="/chinh-sach-doi-tra-a67">Chính sách đổi trả</a></li>
                            <li><a href="/huong-dan-thanh-toan-a68">Hướng dẫn thanh toán</a></li>
                            @*<li><a href="/policy/ship">Chính sách vận chuyển</a></li>
                                <li><a href="/policy/rollback">Chính sách đổi trả</a></li>
                                <li><a href="/policy/payment">Hướng dẫn thanh toán</a></li>*@

                            <li><a href="/home/contact">Liên hệ</a></li>

                        </ul>
                    </div>

                    <p class="text-center">Copyrights © 2017 <a href="http://camcanhbuoidien.com">Cam Canh Buoi Dien</a>. All Rights Reserved. Designed by <a href="http://anpero.com" title="thiết kế web bán hàng anpro">Anpero.com</a></p>
                </div>
            </div>
        </footer>
        <div id="fb-root"></div>
        <script>
            (function (d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.9";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
            $(window).load(function () {
                Cart.bindCart();
            });
        </script>
    </body>
</html>
