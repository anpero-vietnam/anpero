<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <ul class="breadcrumb">
                <li><a href="/" title="Trang chủ">Trang chủ</a></li>

                <li><span>Kiểm tra thông tin bảo hành</span></li>
            </ul>
        </div>


        <div class="main-content col-sm-12 form-horizontal">
            <div class="form-group">
                <label class="col-md-3 control-label"> Mã sản phẩm (mã vạch):</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="seria" value="@ViewBag.seria" />
                </div>

            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">CMTND/ Hộ Chiếu:</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" id="identiryId" value="@ViewBag.identiryId" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-5" id="g-recaptcha"></div>
            </div>
            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-5">
                    <div class="add-to-cart">
                        <a href="javascript:void(0);" class="button product_type_simple add_to_cart_button ajax_add_to_cart" id="checkWarranty" tabindex="0">Đăng ký bảo hành</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <link href="https://anpero.com/assets/global/plugins/bootstrap-sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="https://anpero.com/assets/global/plugins/bootstrap-sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/Bootrap.notify.js"></script>
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script src="~/Scripts/Anpero.Common.js"></script>
    <script src="/Scripts/Warranty.js"></script>
    <script>
        var googleCatcha;
        $(document).ready(function () {            
            Warranty.initCheck();
        });
        $(window).load(function () {
            googleCatcha = grecaptcha.render('g-recaptcha', {
                'sitekey': googleCapchaSitekey,
                'theme': 'light',
                'hl': 'vi'
            });
        });
    </script>
}

