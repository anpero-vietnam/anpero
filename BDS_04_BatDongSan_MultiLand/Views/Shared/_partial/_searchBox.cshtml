@{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }
}
<div class="column col-xs-12 col-sm-3" id="left_column">
    <div class="block left-module search">
        <p class="title_block">Tìm kiếm</p>
        <div class="block_content">
            <div class="col-md-12">
                <select class="input form-control" id="cat_s">
                    <option value="0">Loại bất động sản</option>
                    @if (commonInfo.ProductCategoryList != null && commonInfo.ProductCategoryList.Length > 0)
                    {
                      
                            foreach (var item in commonInfo.ProductCategoryList)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                    }                    
                </select>
                <select class="input form-control" name="scat">
                    <option value="0">Loại nhà đất</option>
                    @if (commonInfo.ProductCategoryList != null && commonInfo.ProductCategoryList.Length > 0)
                    {

                        foreach (var item in commonInfo.ProductCategoryList)
                        {
                            foreach (var chidItem in item.ChildCategory)
                            {
                                <option value="@chidItem.Id"  style="display:none;" class="cct cct_@item.Id">@chidItem.Name</option>
                            }

                        }
                    }
                    
                </select>
                <select class="input form-control" id="country">
                    <option value="0">Tỉnh/ thành phố</option>                    
                </select>
                <select class="input form-control" id="prov">
                    <option value="0">Quận huyện</option>
                </select>
                <select class="input form-control" name="">
                    <option value="0">Diện tích</option>                    
                    <option value="1"><= 30 m²</option>
                    <option value="2">30 - 50 m²</option>
                    <option value="3">50 -80 m²</option>
                    <option value="4">80 - 100 m²</option>
                    <option value="5">100 - 150 m²</option>
                    <option value="6">150 -200 m²</option>
                    <option value="7">>= 200 m²</option>
                    
                </select>
                <select class="input form-control" name="">
                    <option value="0">Mức giá</option>
                    <option value="0">Giá thỏa thuận</option>
                    <option value="1">< 3-5 triệu</option>
                    <option value="2">< 5-10 triệu</option>
                    <option value="3">< 10-40 triệu</option>
                    <option value="4">< 500 Triệu</option>
                    <option value="5"> 500 đến 800 Triệu</option>
                    <option value="6">1 đến 2 tỷ</option>
                    <option value="7">2 đến 3 tỷ</option>
                    <option value="8">3 đến 5 tỷ</option>
                    <option value="9">5 đến 7 tỷ</option>
                    <option value="10">7 đến 10 tỷ</option>
                    <option value="11">10 đến 20 tỷ</option>
                    <option value="12">20 đến 30 tỷ</option>                    
                </select>
                <button class="btn btn-default">Tìm kiếm</button>
            </div>
        </div>
    </div>
</div>
