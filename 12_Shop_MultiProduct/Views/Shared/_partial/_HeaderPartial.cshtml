                                    <span>@item.Name</span>                                    
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>                                    
                                </a>
                                <ul class="main-child level-3">
                                    @foreach (var childItem in item.ChildCategory)
                                    {
                                        <li class="">
