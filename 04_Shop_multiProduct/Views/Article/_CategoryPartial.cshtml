@using AnperoFrontend.WebService;
@model SearchArticleResults

@if (Model!=null)
{   
    <div class="col-md-12 col-xs-12 col-sm-12">
        <div class="row-blog">
            <div class="blog-list">
                <h2 class="page-heading">
                    <span class="page-heading-title">@ViewBag.Name </span>
                </h2>
                <div class="blog-list-wapper">
                    <ul class="row product-list grid">
                        @foreach (BlogItem item in Model.ItemList)
                        {
                            <li class="col-sx-6 col-sm-3">
                                <div class="post-thumb image-hover2">
                                    <a href="@Anpero.StringHelpper.GetArticleLink(item.Title,item.Id)">
                                        <img src="@item.Thumb" alt="@item.Title">
                                        @if (ViewBag.showPlayVideo)
                                        {
                                            <img src="//media.anpero.com/images/38/112018/playvide2018111913211284.png" alt="Play video" class="playbtn" style="width:70px;">
                                        }
                                    </a>
                                </div>
                                <div class="post-desc">
                                    <h5 class="post-title">
                                        <a href="@Anpero.StringHelpper.GetArticleLink(item.Title,item.Id)">@Anpero.StringHelpper.SubString(30, item.Title)</a>
                                    </h5>
                                    <div class="post-meta">
                                        <span class="date">@Anpero.StringHelpper.ConvertTimeVN(item.CreateDate)</span>

                                    </div>
                                    <div class="readmore">
                                        <a href="@Anpero.StringHelpper.GetArticleLink(item.Title,item.Id)">Chi tiết</a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
