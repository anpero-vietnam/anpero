@{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }
    string themeOptionText = "option6";
    int themeOption = commonInfo.ThemeOption;
    switch (themeOption)
    {
        case 1:
            themeOptionText = "option6";
            break;
        case 2:
            themeOptionText = "option5";
            break;
        case 3:
            themeOptionText = "home option2";
            break;
    }
}
@using AnperoFrontend.WebService;
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Html.Raw(ViewBag.Title)</title>
    <meta property="og:locale" content="vi_VN" />
    <meta property="og:type" content="website" />
    <meta name="distribution" content="Global" />
    <meta name="revisit-after" content="1 days" />
    <meta http-equiv="REFRESH" content="1800" />
    <meta name="robots" content="index,follow,all" />
    <meta property="og:title" content="@Html.Raw(ViewBag.Title)" />
    @RenderSection("health", required: false)
    <link href="//media.anpero.com/cdn/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/assets/css/responsive.css" />
    @if (themeOption == 2)
    {
        <link href="/assets/lib/jquery-bxslider/jquery-bxslider.css" rel="stylesheet" />
    }
    <link rel="shortcut icon" href="@commonInfo.Logo" type="image/x-icon">
    
    <link rel="stylesheet" type="text/css" href="/assets/css/@(themeOptionText+".css")" />
    <link rel="dns-prefetch" href="//v2.zopim.com/">
    <link rel="dns-prefetch" href="//www.google-analytics.com/">
    <link rel="dns-prefetch" href="//fonts.googleapis.com/">
    <link rel="dns-prefetch" href="//www.facebook.com/">
    <link href='/static/css' rel='stylesheet' type='text/css'>
    @*<link href="/assets/css/blue-style.css" rel="stylesheet" />*@
    @*<link href="/assets/css/Green-style.css" rel="stylesheet" />*@

</head>
<body class="@themeOptionText">
    <div id="header" class="header">

        @switch (commonInfo.ThemeOption)
        {
            case 2:
                Html.RenderPartial("_partial/_MainHeader_2");
                break;
            default:
                Html.RenderPartial("_partial/_MainHeader_1");

                break;
        }
        <div id="nav-top-menu" class="nav-top-menu">
            <div class="container">
                <div class="row">
                    <div id="main-menu" class="col-sm-9 main-menu">
                        <nav class="navbar navbar-default">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                        <i class="fa fa-bars"></i>
                                    </button>
                                    <a class="navbar-brand" href="#">MENU</a>
                                </div>
                                <div id="navbar" class="navbar-collapse collapse">
                                    <ul class="nav navbar-nav">

                                        @if (commonInfo.MenuList != null)
                                        {
                                            for (int i = 0; i < commonInfo.MenuList.Length; i++)
                                            {
                                                if (commonInfo.MenuList[i].ChidMenu != null && commonInfo.MenuList[i].ChidMenu.Length > 0)
                                                {

                                                    <li class="dropdown">
                                                        <a href="@commonInfo.MenuList[i].Link" data-toggle="dropdown">@commonInfo.MenuList[i].Tittle</a>
                                                        <ul class="dropdown-menu container-fluid">
                                                            <li class="block-container">
                                                                <ul class="block">
                                                                    @for (int j = 0; j < commonInfo.MenuList[i].ChidMenu.Length; j++)

                                                                    {
                                                                        <li class="link_container"><a href="@commonInfo.MenuList[i].ChidMenu[j].Link">@commonInfo.MenuList[i].ChidMenu[j].Tittle</a></li>
                                                                    }
                                                                </ul>
                                                            </li>
                                                        </ul>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li>
                                                        <a href="@commonInfo.MenuList[i].Link">@commonInfo.MenuList[i].Tittle</a>
                                                    </li>
                                                }
                                            }
                                        }

                                    </ul>

                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
                <div id="user-info-opntop"></div>
                <div id="form-search-opntop"></div>
                <!-- userinfo on top-->
                <!-- CART ICON ON MMENU -->
                <div id="shopping-cart-box-ontop">
                    <i class="fa fa-shopping-cart"></i>
                    <div class="shopping-cart-box-ontop-content"></div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <script src="//media.anpero.com/cdn/plugins/jquery-1.10.2.min.js"></script>
    <script src="//media.anpero.com/cdn/assets/plugins/bootstrap/js/bootstrap.min.js"></script>



    @Scripts.Render("~/bundles/bootstrap")
    <script src="/Scripts/ShoppingCart.js"></script>
    @Html.Raw(commonInfo.AnperoPlugin)
    @RenderSection("scripts", required: false)
    @Html.Raw(commonInfo.PageScript)
    <div class="container">
