        </div>
        <div id="trademark-box" class="row">
            <div class="col-sm-12">
                <ul id="trademark-list">
                    <li id="payment-methods">Hỗ trợ thanh toán</li>
                    <li><a href="javascript:void(0);"><img src="/assets/data/nganluong.png" alt="Ngân lượng"></a></li>
                    <li><a href="javascript:void(0);"><img src="/assets/data/Techcombank_logo.jpg" alt="Techcombank"></a></li>
                    <li><a href="javascript:void(0);"><img src="/assets/data/trademark-wu.jpg" alt="ups"></a></li>
                    <li><a href="javascript:void(0);"><img src="~/assets/data/vib.jpg" alt="vib bank"></a></li>
                    <li><a href="javascript:void(0);"><img src="/assets/data/trademark-visa.jpg" alt="ups"></a></li>
                    <li><a href="javascript:void(0);"><img src="/assets/data/trademark-mc.jpg" alt="ups"></a></li>
                    <li><a href="javascript:void(0);"><img src="/assets/data/trademark-ems.jpg" alt="ups"></a></li>
                    <li><a href="javascript:void(0);"><img src="/assets/data/trademark-dhl.jpg" alt="ups"></a></li>
                    <li><a href="javascript:void(0);"><img src="/assets/data/trademark-fe.jpg" alt="ups"></a></li>

                </ul>
            </div>
        </div>
    </div>


    <footer id="footer">
        <div class="container">


            <div id="introduce-box" class="row">
                @if (!string.IsNullOrEmpty(commonInfo.Footer))
                {
                    <text>@Html.Raw(commonInfo.Footer)</text>
                }
                else
                {
                <div class="col-md-4">

                    <div class="address-box">

                        <a href="/"><img src="@commonInfo.Logo" alt="logo"></a>
                        <div class="adrct">
                            <div class="tit-contain"><i class="fa fa-home"></i> @commonInfo.Address</div>
                            <div class="tit-contain"><i class="fa fa-phone"></i> @commonInfo.HotLine</div>

                            @if (!string.IsNullOrEmpty(commonInfo.Email))
                            {
                                <div class="tit-contain"><i class="fa fa-envelope"></i> @commonInfo.Email</div>
                            }

                            @if (!string.IsNullOrEmpty(commonInfo.Skype))
                            {
                                <div class="tit-name">Skype:</div>
                                <div class="tit-contain"><a href="skype:@commonInfo.Skype?call"></a> @commonInfo.Skype</div>
                            }

                        </div>
                        @{

                            string thisUrl = Request.Url.AbsoluteUri;
                            <div class="introduce-title" style="margin-top:10px;">Chia sẻ với bạn bè</div>
                            <div class="social-link">
                                @if (!string.IsNullOrEmpty(commonInfo.FaceBookLink))
                                {
                                    <a href="http://www.facebook.com/share.php?u=@commonInfo.FaceBookLink&title=@commonInfo.Desc" target="_blank"><i class="fa fa-facebook"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(commonInfo.Skype))
