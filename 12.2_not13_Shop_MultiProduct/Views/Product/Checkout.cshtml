</div>
@section scripts{
    <script src="~/Scripts/Bootrap.notify.js"></script>
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <style>
        .mt-25 {
            margin-top: 25px;
        }
        .qty input{
            width: 30px;
            float: left;
        }
        .cart_product img{
            max-height:105px;
        }
        .qty .btn {
            float: left;
        }
        .form-list label {
            line-height: 25px !important;
        }
    </style>
    <script>
        var googleCatcha;
        $(window).load(function () {
            var width = $(window).width();
            $("#ajax_loader").css("left", ((width / 2) - 100) + "px")
            Cart.bindCartTable();
            $("input[name=radio_3]").click(function () {
                Cart.bindCartTable();
            });
            $("input[name=radio_4]").click(function () {
                Cart.bindCartTable();
            });
            $("#orderBtn").click(function () {
                Cart.sendOrder();
            });
            $("#lb1").click(function () {
                $(".cardList").show();
            });
            $(".lb2").click(function () {
                $(".cardList").hide();
            });
            googleCatcha = grecaptcha.render('g-recaptcha', {
                'sitekey': googleCapchaSitekey,
                'theme': 'light',
                'hl': 'vi'
            });
            Cart.bindTempForm();
        });
    </script>
}