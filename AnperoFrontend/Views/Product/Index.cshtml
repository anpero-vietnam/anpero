


@if (ViewData["prDetail"] != null)
{
    AnperoFrontend.WebService.ProductItem item = (AnperoFrontend.WebService.ProductItem)ViewData["prDetail"];
    <div class="page-top">
        <div class="container">
            <!-- breadcrumb -->
            <div class="breadcrumb clearfix">
                <a class="home" href="/" title="Return to Home">Home</a>
                <span class="navigation-pipe">&nbsp;</span>
                <a href="/" title="Return to Home">@item.ParentCatName</a>
                <span class="navigation-pipe">&nbsp;</span>
                <a href="/" title="Return to Home">@item.CatName</a>
            </div>
            <!-- ./breadcrumb -->
            <!-- row -->
            <div class="row">
                <!-- Left colunm -->
                @Html.Partial("product/_MenuAndAdsPartial")
                <!-- ./left colunm -->
                <!-- Center colunm-->
                <div class="center_column col-xs-12 col-sm-9" id="center_column">
                    <!-- Product -->
                    <div id="product">
                        <div class="primary-box row">
                            <div class="pb-left-column col-xs-12 col-sm-6">
                                <!-- product-imge-->
                                <div class="product-image">
                                    <div class="product-full">
                                        <img id="product-zoom" src='@item.Images' data-zoom-image="@item.Images" />
                                    </div>
                                    <div class="product-img-thumb" id="gallery_01">
                                        <ul class="owl-carousel" data-items="3" data-nav="true" data-dots="false" data-margin="20" data-loop="true">
                                            <li>
                                                <a href="#" data-image="assets/data/product-s3-420x512.jpg" data-zoom-image="assets/data/product-s3-850x1036.jpg">
                                                    <img id="product-zoom" src="assets/data/product-s3-100x122.jpg" />
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" data-image="assets/data/product-s2-420x512.jpg" data-zoom-image="assets/data/product-s2-850x1036.jpg">
                                                    <img id="product-zoom" src="assets/data/product-s2-100x122.jpg" />
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" data-image="assets/data/product-420x512.jpg" data-zoom-image="assets/data/product-850x1036.jpg">
                                                    <img id="product-zoom" src="assets/data/product-100x122.jpg" />
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" data-image="assets/data/product-s4-420x512.jpg" data-zoom-image="assets/data/product-s4-850x1036.jpg">
                                                    <img id="product-zoom" src="assets/data/product-s4-100x122.jpg" />
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" data-image="assets/data/product-s5-420x512.jpg" data-zoom-image="assets/data/product-s5-850x1036.jpg">
                                                    <img id="product-zoom" src="assets/data/product-s5-100x122.jpg" />
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" data-image="assets/data/product-s6-420x512.jpg" data-zoom-image="assets/data/product-s6-850x1036.jpg">
                                                    <img id="product-zoom" src="assets/data/product-s6-100x122.jpg" />
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- product-imge-->
                            </div>
                            <div class="pb-right-column col-xs-12 col-sm-6">
                                <h1 class="product-name">@item.PrName</h1>
                                <div class="product-comments">
                                    <div class="product-star">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-half-o"></i>
                                    </div>

                                </div>
                                <div class="product-price-group">
                                    @if (item.IsSale)
                                    {
                                        <span class="price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.SalePrice.ToString()) đ</span>
                                        <span class="old-price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.Price.ToString()) đ</span>
                                        <span class="discount">@Anpero.StringHelpper.ConVertToMoneyFormatInt((item.Price / item.SalePrice).ToString()) đ</span>
                                    }
                                    else
                                    {
                                        <span class="price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.Price.ToString()) đ</span>
                                    }
                                </div>
                                <div class="info-orther">
                                    <p>Mã Sản phẩm: #@item.Id</p>
                                    <p>
                                        Trạng thái:
                                        @if (item.IsInstock)
                                        {
                                            <span class="in-stock">Còn hàng</span>
                                        }
                                        else
                                        {
                                            <span class="in-stock">Tạm hết hàng</span>
                                        }
                                    </p>
                                    <p>Tình trạng: mới</p>
                                    @if (item.Warranty > 0)
                                    {
                                        <p>Bảo hành: @item.Warranty tháng</p>
                                    }
                                </div>
                                @if (item.ShortDesc != null && item.ShortDesc.Length > 0)
                                {
                                    <div class="product-desc">
                                        @Html.Raw(item.ShortDesc)
                                    </div>
                                }
                                <div class="form-action">
                                    <div class="button-group">
                                        @if (item.IsInstock)
                                        {
                                        <a class="btn-add-cart" href="#">Thêm vào giỏ hàng</a>
                                        }
                                        else
                                        {
                                        <a class="btn-add-cart" href="#">Tạm hết hàng</a>
                                        }
                                    </div>
                                    <div class="button-group">
                                        <a target="_blank" class="wishlist" href="//www.facebook.com/sharer.php?u=@HttpContext.Current.Request.Url.AbsoluteUri">
                                            <i class="fa fa-facebook-official"></i>
                                            <br>Share
                                        </a>
                                        <a class="compare" href="//plus.google.com/share?url=@HttpContext.Current.Request.Url.AbsoluteUri">
                                            <i class="fa fa-google-plus"></i>
                                            <br>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- tab product -->
                        <div class="product-tab">
                            <ul class="nav-tab">
                                <li class="active">
                                    <a aria-expanded="false" data-toggle="tab" href="#product-detail">Thông tin sản phẩm</a>
                                </li>


                            </ul>
                            <div class="tab-container">
                                <div id="product-detail" class="tab-panel active">
                                    @Html.Raw(item.Detail)
                                </div>
                            </div>
                        </div>
                        <!-- ./tab product -->
                        <!-- box product -->
                        <div class="page-product-box">
                            <h3 class="heading">Sản phẩm liên quan</h3>
                            <ul class="product-list">
                                @if (ViewData["relateProduct"] != null)
                                {
                                    AnperoFrontend.WebService.SearchResult relateProduct = (AnperoFrontend.WebService.SearchResult)ViewData["relateProduct"];
                                    if (relateProduct.Item != null && relateProduct.Item.Length > 0)
                                    {
                                        foreach (var items in relateProduct.Item)
                                        {
                                            <li class="col-sx-12 col-sm-3">
                                                <div class="product-container">
                                                    <div class="left-block">
                                                        <a href="#">
                                                            <img class="img-responsive" alt="@item.PrName" src="@items.Images" />
                                                        </a>
                                                        <div class="quick-view">
                                                            <a title="Add to my wishlist" class="heart" href="#"></a>
                                                            <a title="Add to compare" class="compare" href="#"></a>
                                                            <a title="Quick view" class="search" href="#"></a>
                                                        </div>
                                                        <div class="add-to-cart">
                                                            <a title="Add to Cart" href="#add">Thêm vào giỏ hàng</a>
                                                        </div>
                                                    </div>
                                                    <div class="right-block">
                                                        <h5 class="product-name"><a href="#">Maecenas consequat mauris</a></h5>
                                                        <div class="product-star">
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star-half-o"></i>
                                                        </div>
                                                        <div class="content_price">
                                                            <span class="price product-price">$38,95</span>
                                                            <span class="price old-price">$52,00</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    }
                                }

                            </ul>
                        </div>
                        <!-- ./box product -->

                    </div>
                    <!-- Product -->
                </div>
                <!-- ./ Center colunm -->
            </div>
            <!-- ./row-->


        </div>
    </div>
    @section health{
        <meta name="description" content="@Anpero.StringHelpper.removeHtmlTangs(item.ShortDesc)" />
        <meta name="keywords" content="@Anpero.StringHelpper.UnicodeToKoDau(item.KeyWord)" />
    }
    @section  scripts{
        <link rel="stylesheet" type="text/css" href="/assets/lib/fancyBox/jquery.fancybox.css">
        <script type="text/javascript" src="/assets/lib/jquery.elevatezoom.js"></script>
        <script type="text/javascript" src="/assets/lib/fancyBox/jquery.fancybox.js"></script>
        @item.Script
    }
}