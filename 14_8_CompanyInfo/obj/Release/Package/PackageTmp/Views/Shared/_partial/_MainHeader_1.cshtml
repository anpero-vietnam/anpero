@using AnperoFrontend.WebService;
@{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }
}
<header> 
    <div id="header">
        <div class="header-container container">
            <div class="row">
                <div class="logo">
                    <a href="/" title="@commonInfo.Desc | logo" alter="@commonInfo.Desc | logo">
                        <div><img src="@commonInfo.Logo" alt="@commonInfo.Name"></div>
                    </a>
                </div>
                <div class="fl-nav-menu">
                  
                    <nav>
                        <div class="mm-toggle-wrap">
                            <div class="mm-toggle"><i class="icon-align-justify"></i><span class="mm-label">Menu</span> </div>
                        </div>
                        <div class="nav-inner hidden-sm">
                            <p id="h-info" class="hidden-sm hidden-xs"><a href="/about">@commonInfo.Name</a></p>
                            <ul id="nav" class="hidden-xs">
                                @if (commonInfo.MenuList != null && commonInfo.MenuList.Length > 0)
                                {
                                    foreach (var item in commonInfo.MenuList)
                                    {
                                        <li class="level0 parent drop-menu">
                                            <a href="@item.Link"><span>@item.Tittle</span></a>
                                            @if (item.ChidMenu.Length > 0)
                                            {
                                                <ul class="level1">
                                                    @foreach (var childItem in item.ChidMenu)
                                                    {
                                                        <li class="level1">
                                                            <a href="@childItem.Link"><span>@childItem.Tittle</span></a>
                                                        </li>
                                                    }

                                                </ul>
                                            }
                                        </li>
                                    }
                                }
                            <li class="level0 parent drop-menu pull-right">
                                <a href="tel:@commonInfo.HotLine"><i class="glyphicon glyphicon-phone-alt"></i> @Anpero.StringHelpper.ToPhoneNumberFormat(commonInfo.HotLine) @(string.IsNullOrEmpty(commonInfo.OtherPhone) ? "" : "- " + @Anpero.StringHelpper.ToPhoneNumberFormat(commonInfo.OtherPhone))</a>                                
                            </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <div class="fl-header-right hidden-sm hidden-xs">
                @*<div class="fl-links">
                        <div class="no-js">
                            <a title="Company" class="clicker"></a>
                            <div class="fl-nav-links">
                                <ul class="links">

                                    <li><a href="/blog" title="Blog"><span>Blogs Tin Tức</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>*@
                <div class="collapse navbar-collapse">
                    <form class="navbar-form" role="search" action="/search" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm" name="keyword" id="keyword">
                            <span class="input-group-btn">
                                <button type="submit" class="search-btn"> <span class="glyphicon glyphicon-search"> <span class="sr-only">Search</span> </span> </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>
