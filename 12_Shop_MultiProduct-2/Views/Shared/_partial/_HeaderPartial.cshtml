@using AnperoFrontend.WebService;



@{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }
    string baseUrl = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}
<header class="header">
    <div class="header-page">
        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-12 col-xs-12 header-logo">
                    <div class="visible-xs visible-sm toggle-menu translateY-50">
                        <a href="javascript:void(0)" class="btnMBToggleNav"><img src="/content/theme/images/icons/icon-menu.png" alt=""></a>
                    </div>
                    <div class="logo">
                        <a href="/"><img src="http://udicland.com.vn/images/ads/1388658134_1384155587_UdicLand%20logo.png" style="width:100%"></a>
                    </div>
                    <h1 class="hide">
                        @commonInfo.Name
                    </h1>
                    <div class="visible-xs visible-sm box-cart-mobile translateY-50">
                        <a href="#">
                            <div class="icon">
                                <i class="fa fa-shopping-bag"></i>
                            </div>
                            <span class="numberCart">0</span>
                        </a>
                    </div>
                </div>
                
                <div class="col-md-4 col-sm-12 col-xs-12 header-search">
                        <div class="form-search">
                            <form action="@baseUrl/search" method="get" role="search">
                                <input type="text" name="keyword" placeholder="Tìm kiếm" aria-label="Search" itemprop="query-input">
                                <i class="fa fa-search" aria-hidden="true"></i>
                                <button type="submit" class="btn-search">Tìm kiếm</button>
                            </form>
                        </div>
                        <ul class="search-notice">
                            <li>gõ Tiếng Việt có dấu hoặc không dấu đều được</li>
                        </ul>
                    </div>
                <div class="col-md-3 hidden-sm hidden-xs header-user">

                    <div class="box-cart pull-right relative">
                        <a href="/product/checkout">
                            <div class="box">
                                <div class="box">
                                    <div class="icon">
                                        <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                                    </div>
                                    <div class="text">
                                        <span>Giỏ hàng (<span id="cartCount" class="numberCart spN">0</span>)</span>
                                        <span id="cartPrice" class="sub">0₫</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="pull-right hidden-xs">
                        <a href="/product/checkout">
                            <div class="box">
                                <div class="box">
                                    <div class="icon">
                                        <i class="fa fa-youtube" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </a>

                    </div>
                    <div class="pull-right hidden-xs">
                        <a href="@commonInfo.FaceBookLink">
                            <div class="box">
                                <div class="box">
                                    <div class="icon">
                                        <i class="fa fa-facebook" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                
                
                <div class="overlayMenu"></div>
            </div>
        </div>
    </div>
    <!--header-page-->

    <nav class="header-menu">
        <div class="container">
            <ul class="nav-navbar">
                <li class="active  li-child">
                    <a href="#" class="current" title="Trang chủ">
                        TRANG CHỦ
                    </a>
                </li>
                <li class="li-child">
                    <a href="#" class="" title="Sản phẩm">
                        Sản phẩm
                        <i class="fa fa-chevron-down"></i>
                    </a>                   
                    <ul class="nav-navbar-child">
                        <li class="nav-child-items">
                            <a href="#">Cho thuê văn phòng</a>
                        </li>
                        <li class="nav-child-items">
                            <a href="#">Quản lý tòa nhà</a>
                        </li>
                        <li class="nav-child-items">
                            <a href="#">Dịch vụ tòa nhà</a>
                        </li>
                    </ul>
                </li>
                <li class="li-child">
                    <a href="#" class="" title="Ưu đãi">
                        Ưu đãi
                    </a>
                </li>
                <li class="li-child">
                    <a href="#" class="" title="Giới thiệu">
                        Giới thiệu
                    </a>
                </li>
                <li class="li-child">
                    <a href="#" class="" title="Tin tức">
                        Tin tức
                    </a>
                </li>
                <li class="li-child">
                    <a href="#" class="" title="Liên hệ">
                        Liên hệ
                    </a>
                </li>                
            </ul>
            <div class="visible-xs visible-sm close-menu-mobile text-center">
                <a href="javascript:void(0)" class="close-nav view-all">Đóng</a>
            </div>
        </div>
    </nav>
</header>

