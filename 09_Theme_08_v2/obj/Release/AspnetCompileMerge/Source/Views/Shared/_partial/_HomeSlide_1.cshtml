@using AnperoFrontend.WebService;
<div id="thm-mart-slideshow" class="thm-mart-slideshow">
    <div class="container">
        
                <ul>
                    <amp-carousel width="1170" height="450" layout="responsive" type="slides" autoplay delay="2000">
                        @if (ViewData["slide"] != null)
                        {
                            Ads[] slide = (Ads[])ViewData["slide"];
                            if (slide.Length > 0)
                            {
                                foreach (var item in slide)
                                {
                                    <li data-transition='random' data-slotamount='7' data-masterspeed='1000' data-thumb='@item.ImagesUrl'>

                                        @*<img src='@item.ImagesUrl' data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' alt="slider-image1"/>*@
                                        <amp-img media="(min-width: 650px)" width="1170" height="450" src="@item.ImagesUrl" layout="responsive" data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' alt="@item.Description">
                                            <noscript>
                                                <img src="@item.ImagesUrl" data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' />
                                            </noscript>
                                        </amp-img>
                                        <div class="info">
                                            @Html.Raw(item.Description)
                                        </div>
                                    </li>
                                }
                            }
                        }
                    </amp-carousel>
</ul>
            
    </div>
</div>
