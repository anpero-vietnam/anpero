@using AnperoFrontend.WebService;
@{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }

}
<header>
    <div class="header-banner">
        <div class="assetBlock">
            <div style="height: 20px; overflow: hidden;" id="slideshow">
                <p style="display: block;">HOT DAYS! - <span>20%</span> KHÁCH ĐẶT HÀNG ONLINE! &gt;</p><p style="display: none;">GIẢM GIÁ LÊN ĐẾN <span>40%</span> CHO ĐƠN ĐẶT HÀNG LỚN! &gt;</p>
            </div>
        </div>
    </div>
    <div id="header">
        <div class="header-container container">
            <div class="row">
                <div class="logo">
                    <a href="/" title="Flavours HTML">
                        <div><img src="@commonInfo.Logo" alt="@commonInfo.Name"></div>
                    </a>
                </div>
                <div class="fl-nav-menu">

                    <nav>
                        <div class="mm-toggle-wrap">
                            <div class="mm-toggle"><i class="icon-align-justify"></i><span class="mm-label">Menu</span> </div>
                        </div>
                        <div class="nav-inner">
                            <!-- BEGIN NAV -->
                            <ul id="nav" class="hidden-xs">
                                <li id="nav-home" class="level0 parent drop-menu"><a class="level-top active" href="/"><span>Trang Chủ</span></a></li>
                                <li class="mega-menu">
                                    <a class="level-top" href="/list"><span>Sản phẩm‎</span></a>
                                    <div class="level0-wrapper dropdown-6col" style="left: 0px; display: none;">
                                        <div class="container">
                                            <div class="level0-wrapper2">
                                                <div class="nav-block nav-block-center">
                                                    <!--mega menu-->
                                                    <ul class="level0">
                                                        @if (commonInfo.ProductCategoryList != null && commonInfo.ProductCategoryList.Length > 0)
                                                        {
                                                            foreach (var item in commonInfo.ProductCategoryList)
                                                            {
                                                                if (item.ChildCategory != null && item.ChildCategory.Length == 0)
                                                                {
                                                                    <li class="level3 nav-6-1 parent item"> <a href="@Anpero.StringHelpper.GetParentCategoryLink(item.Name,item.Id)"><span>@item.Name‎</span></a> </li>
                                                                }
                                                                else
                                                                {
                                                                    <li class="level3 nav-6-1 parent item">
                                                                        <a href="@Anpero.StringHelpper.GetParentCategoryLink(item.Name, item.Id)"><span>@item.Name</span> </a>
                                                                        <ul class="level1">
                                                                            @foreach (var chidItem in item.ChildCategory)
                                                                            {
                                                                                <li class="level2 nav-6-1-1"><a href="@Anpero.StringHelpper.GetCategoryLink(chidItem.Name, chidItem.Id)"><span>@chidItem.Name</span></a></li>
                                                                            }
                                                                        </ul>
                                                                    </li>
                                                                }
                                                            }
                                                        }
                                                    </ul>
                                                    <!--level0-->
                                                </div>
                                                <!--nav-block nav-block-center-->
                                                <div class="nav-add">
                                                    <div class="push_item">
                                                        <div class="push_img"><a href="#"><img src="assets/images/menu-img1.jpg" alt="menu item 1"></a></div>

                                                    </div>
                                                    <div class="push_item">
                                                        <div class="push_img"><a href="#"><img src="assets/images/menu-img2.jpg" alt="menu item 2"></a></div>

                                                    </div>
                                                    <div class="push_item">
                                                        <div class="push_img"><a href="#"><img src="assets/images/menu-img3.jpg" alt="menu item 3"></a></div>

                                                    </div>
                                                    <div class="push_item push_item_last">
                                                        <div class="push_img"><a href="#"><img src="assets/images/menu-img4.jpg" alt="menu item 4"></a></div>

                                                    </div>
                                                </div>
                                            </div>
                                            <!--level0-wrapper2-->
                                        </div>
                                        <!--container-->
                                    </div>
                                    <!--level0-wrapper dropdown-6col-->
                                    <!--mega menu-->
                                </li>
                                <li class="fl-custom-tabmenulink mega-menu">
                                    <a href="#" class="level-top"> <span>Sản phẩm khuyến mại</span> </a>
                                    <div class="level0-wrapper fl-custom-tabmenu" style="left: 0px; display: none;">
                                        <div class="container">
                                            <div class="header-nav-dropdown-wrapper clearer">
                                                <div class="grid12-3">

                                                    <div><img src="/assets/images/custom-block.png" alt="custom-image"></div>
                                                    <h4 class="heading">SALE UP TO 30% OFF</h4>
                                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                                                </div>
                                                <div class="grid12-3">

                                                    <div><img src="/assets/images/custom-block.png" alt="custom-image"></div>
                                                    <h4 class="heading">SALE UP TO 30% OFF</h4>
                                                    <p>Sed et quam lacus. Fusce condimentum eleifend enim a feugiat.</p>
                                                </div>
                                                <div class="grid12-3">
                                                    <div><img src="/assets/images/custom-block.png" alt="custom-image"></div>
                                                    <h4 class="heading">SALE UP TO 30% OFF</h4>
                                                    <p>Sed et quam lacus. Fusce condimentum eleifend enim a feugiat.</p>
                                                </div>
                                                <div class="grid12-3">
                                                    <div><img src="/assets/images/custom-block.png" alt="custom-image"></div>
                                                    <h4 class="heading">SALE UP TO 30% OFF</h4>
                                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li><a href="/home/contact">Liên hệ</a></li>
                                <li class="level0 parent drop-menu">
                                    <a href="/blog"><span>Tin tức</span> </a>
                                    <!--sub sub category-->
                                    <ul class="level1">
                                        <li class="level1"><a href="/home/contact"><span>Liên hệ</span></a> </li>
                                        <li class="level1"><a href="/blog"><span>Blog</span></a> </li>
                                    </ul>
                                </li>
                            </ul>
                            <!--nav-->
                        </div>
                    </nav>
                </div>
                <!--row-->
            </div>
            <div class="fl-header-right">
                <div class="fl-links">
                    <div class="no-js">
                        <a title="Company" class="clicker"></a>
                        <div class="fl-nav-links">
                            <ul class="links">
                                <li><a href="/product/checkout" title="Checkout">Checkout</a></li>
                                <li><a href="/blog" title="Blog"><span>Blog</span></a></li>
                            </ul>
