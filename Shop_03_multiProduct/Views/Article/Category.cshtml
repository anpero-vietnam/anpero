@using AnperoFrontend.WebService;
@{
    SearchArticleResults articleList = (SearchArticleResults)ViewData["ArticleList"];
}

<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="#" title="Return to Home">Home</a>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">Blog</span>
        </div>
        <!-- ./breadcrumb -->
        <!-- row -->
        <div class="row">

            <!-- Left colunm -->
            @Html.Partial("article/_MenuAndAdsPartial")
            <!-- ./left colunm -->
            <!-- Center colunm-->
            @if (articleList.ResultsCount > 0)
            {
                <div class="col-main col-sm-9">
                    <div id="main" class="blog-wrapper">
                        <div id="primary" class="site-content">
                            <div id="content" role="main">
                                @foreach (var item in articleList.ItemList)
                                {                                   
                                    <article lass="blog_entry clearfix wow bounceInUp animated animated">
                                        <header class="blog_entry-header clearfix">
                                            <div class="blog_entry-header-inner">
                                                <h2 class="blog_entry-title"> <a href="@Anpero.StringHelpper.GetArticleLink(item.Title,item.Id)" rel="bookmark">@item.Title</a> </h2>
                                                <div class="entry-meta">
                                                    <time class="entry-date">@Anpero.StringHelpper.ConvertTimeVN(item.CreateDate)</time>
                                                    .
                                                </div>
                                            </div>
                                        
                                        </header>
                                        <div class="entry-content">
                                            <div class="featured-thumb">
                                                <a href="@Anpero.StringHelpper.GetArticleLink(item.Title,item.Id)">
                                                    <img src="@item.Thumb" alt="@item.Title">
                                                </a>
                                            </div>
                                            <div class="entry-content">
                                                @item.ShotDesc
                                            </div>
                                            <p> <a href="@Anpero.StringHelpper.GetArticleLink(item.Title,item.Id)">Chi tiết</a> </p>
                                        </div>
                                    </article>
                                }
                            </div>
                        </div>
                        <div class="pager">
                            <div class="pages">
                                @Html.Raw(ViewBag.page)
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-main col-sm-9">
                    <div id="main" class="blog-wrapper">
                        <div id="primary" class="site-content">
                            <div id="content" role="main">
                                <article id="post-29" class="blog_entry clearfix wow bounceInUp animated animated" style="visibility: visible;">
                                    <header class="blog_entry-header clearfix">
                                        <div class="blog_entry-header-inner">
                                            <h2 class="blog_entry-title"> <a href="blog-detail.html" rel="bookmark">LOREM IPSUM DOLOR SIT AMET</a> </h2>
                                            <div class="entry-meta">
                                                <time class="entry-date">Jul 10, 2014</time>
                                                .
                                            </div>
                                        </div>
                                        <!--blog_entry-header-inner-->
                                    </header>
                                    <div class="entry-content">
                                        <div class="featured-thumb"><a href="#"><img src="images/blog-img.jpg" alt="blog-img3"></a></div>
                                        <div class="entry-content">
