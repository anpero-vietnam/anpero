@if (ViewData["prDetail"] != null)
{
    AnperoFrontend.WebService.Webconfig commonInfo = new AnperoFrontend.WebService.Webconfig();
    if (ViewData["commonInfo"] != null)
    {
        commonInfo = (AnperoFrontend.WebService.Webconfig)ViewData["commonInfo"];
    }
    AnperoFrontend.WebService.ProductItem item = (AnperoFrontend.WebService.ProductItem)ViewData["prDetail"];
    @section health{
        <meta name="description" content="@Anpero.StringHelpper.removeHtmlTangs(item.ShortDesc)" />
        <meta name="keywords" content="@Anpero.StringHelpper.UnicodeToKoDau(item.KeyWord)" />
        <link rel="stylesheet" type="text/css" href="~/assets/stylesheet/flexslider.css">
        <meta property="og:description" content="@item.ShortDesc" />
        <meta property="og:title" content="@item.PrName" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="ngonlanh.vn" />
        <meta property="og:image" content="@item.Images" />
    }
    <div id="page">
        <div class="page-heading">
            <div class="breadcrumbs">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <ul>
                                <li class="home"> <a href="/" title="Trang chủ">Trang chủ</a> <span>—› </span> </li>
                                <li> <a href="@Anpero.StringHelpper.GetParentCategoryLink(item.ParentCatName, item.ParentId)" title="">@item.ParentCatName</a> <span>—› </span> </li>
                                <li> <a href="@Anpero.StringHelpper.GetParentCategoryLink(item.CatName, item.CatID)" title="">@item.CatName</a> </li>
                                @*<li> <strong>@item.PrName</strong> </li>*@
                            </ul>
                        </div>
                        <!--col-xs-12-->
                    </div>
                    <!--row-->
                </div>
                <!--container-->
            </div>
            <div class="page-title">
                <h2>@item.PrName</h2>
            </div>
        </div>
        <!-- BEGIN Main Container -->
        <div class="main-container col1-layout wow bounceInUp animated">
            <div class="main">
                <div class="col-main">
                    <!-- Endif Next Previous Product -->
                    <div class="product-view wow bounceInUp animated" itemscope="" itemtype="http://schema.org/Product" itemid="#product_base">
                        <div id="messages_product_view"></div>
                        <!--product-next-prev-->
                        <div class="product-essential container">
                            <div class="row">
                                <div class="product-next-prev"> <a class="product-next" title="Next" href="#"><span></span></a> <a class="product-prev" title="Previous" href="#"><span></span></a> </div>
                                <form action="" method="post" id="product_addtocart_form">
                                    <div class="product-img-box col-sm-6 col-xs-12">
                                        <div class="new-label new-top-left"> New </div>
                                        <div class="product-image">
                                            <div class="large-image"> <a href="@Anpero.StringHelpper.GetParentCategoryLink(item.CatName, item.CatID)" class="cloud-zoom" id="zoom1" rel="useWrapper: false, adjustY:0, adjustX:20"> <img src="@item.Images"> </a> </div>
                                            <div class="flexslider flexslider-thumb">
                                                @if (item.ImagesSlide != null && item.ImagesSlide.Length > 0)
                                                {
                                                    <ul class="previews-list slides">
                                                        @foreach (var images in item.ImagesSlide)
                                                        {
                                                            <li>
                                                                <a href='@images' class='cloud-zoom-gallery' rel="useZoom: 'zoom1', smallImage: '@images' ">
                                                                    <img src="@images" alt="@item.PrName" />
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                            </div>
                                        </div>
                                        <!-- end: more-images -->
                                    </div>                                    
                                    <div class="product-shop col-sm-6 col-xs-12">
                                        <div class="product-name">
                                            <h1 itemprop="name">@item.PrName</h1>
                                        </div>                            
                                        <span itemprop="aggregateRating" itemscope="" itemtype="http://schema.org/AggregateRating">
                                            <div class="rating">
                                                <div class="ratings">
                                                    <div class="rating-box">
                                                        <div class="rating" style="width:50%"></div>
                                                    </div>
                                                    <p class="rating-links"><a href="#">1 Đánh giá</a> <span class="separator">|</span> <a href="#">Mua ngay</a> </p>
                                                </div>
                                            </div>
                                        </span>
                                        <div class="price-block">
                                            <div class="price-box"> <span class="regular-price" id="product-price-123"> <span class="price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.Price)0</span> </span> </div>
                                            <p class="availability in-stock">                                                
                                                <span>In stock</span>
                                            </p>
                                        </div>
                                        <!--price-block-->
                                        <div class="short-description">
                                            <h2>Mô tả ngắn</h2>
                                            <p>@Html.Raw(item.ShortDesc)</p>
                                        </div>
                                        <div class="add-to-box">
                                            <div class="add-to-cart">
                                                <div class="pull-left">
                                                    <div class="custom pull-left">
                                                        <button onclick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty )) result.value++;return false;" class="increase items-count" type="button"><i class="icon-plus">&nbsp;</i></button>
                                                        <input type="text" name="qty" id="qty" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                                                        <button onclick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 0 ) result.value--;return false;" class="reduced items-count" type="button"><i class="icon-minus">&nbsp;</i></button>
                                                    </div>
                                                    <!--custom pull-left-->
                                                </div>
                                                <!--pull-left-->
                                                <button type="button" title="Add to Cart" class="button btn-cart" onclick="Cart.addProduct(@item.Id,@item.Price,'@item.Images','@item.PrName');"><span><i class="icon-basket"></i>Mua ngay</span></button>
                                            </div>
                                            <!--add-to-cart-->
                                            <div class="email-addto-box">
                                                <p class="email-friend"><a href="#" title="Email to a Friend"><span>Email to a Friend</span></a></p>
                                                <ul class="add-to-links">
                                                    <li> <a class="link-wishlist" href="wishlist.html" onclick="" title="Add To Wishlist"><span>Add To Wishlist</span></a> </li>
                                                  
                                                </ul>
                                                <!--add-to-links-->
                                            </div>
                                            <!--email-addto-box-->
                                        </div>
                                        <!--add-to-box-->
                                        <!-- thm-mart Social Share-->
                                        <div class="social">
                                            <ul class="link">
                                                @if (!string.IsNullOrEmpty(commonInfo.Skype) || !string.IsNullOrEmpty(commonInfo.FaceBookLink))
                                                {
                                                    string thisUrl = HttpContext.Current.Request.Url.AbsoluteUri;

                                                    if (!string.IsNullOrEmpty(commonInfo.FaceBookLink))
                                                    {
                                                        <li class="fb pull-left"><a target="_blank" rel="nofollow" href="http://www.facebook.com/share.php?u=@commonInfo.FaceBookLink&title=@commonInfo.Desc" title="Facebook"></a></li>

                                                    }
                                                    if (!string.IsNullOrEmpty(commonInfo.Skype))
                                                    {
                                                        <li class="skype pull-left"><a target="_blank" rel="nofollow" href="skype:@commonInfo.Skype?call" title="skype"></a></li>

                                                    }
                                                    <li class="tw pull-left"><a target="_blank" rel="nofollow" href="http://www.twitter.com/share?url=@thisUrl" title="Twitter"></a></li>
                                                    <li class="googleplus pull-left"><a target="_blank" rel="nofollow" href="https://plus.google.com/share?url=@thisUrl" title="GooglePlus"></a></li>
                                                    <li class="pintrest pull-left"><a target="_blank" rel="nofollow" href="http://pinterest.com/pinthis?url=@thisUrl" title="PInterest"></a></li>
                                                }
                                            </ul>
                                        </div>
                                        <!-- thm-mart Social Share Close-->
                                    </div>
                                    <!--product-shop-->
                                    <!--Detail page static block for version 3-->
                                </form>
                            </div>
                        </div>
                        <!--product-essential-->
                        <div class="product-collateral container">
                            <ul id="product-detail-tab" class="nav nav-tabs product-tabs">
                                <li class="active"> <a href="#product_tabs_description" data-toggle="tab"> Mô tả sản phẩm </a> </li>
                            </ul>
                            <div id="productTabContent" class="tab-content">
                                <div class="tab-pane fade in active" id="product_tabs_description">
                                    <div class="std">
                                        @Html.Raw(item.Detail)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-additional">
                            <div class="related-pro container">
                                <div class="slider-items-products">
                                    <div class="new_title center">
                                        <h2>Sản phẩm liên quan</h2>
                                    </div>
                                    <div id="related-slider" class="product-flexslider hidden-buttons">
                                        <div class="slider-items slider-width-col4 products-grid">
                                            @if (ViewData["relateProduct"] != null)
                                            {
                                                AnperoFrontend.WebService.SearchResult relateProduct = (AnperoFrontend.WebService.SearchResult)ViewData["relateProduct"];
                                                if (relateProduct.Item != null && relateProduct.Item.Length > 0)
                                                {
                                                    foreach (var items in relateProduct.Item)
                                                    {
                                                        <!-- Item -->
                                                        <div class="item">
                                                            <div class="item-inner">
                                                                <div class="item-img">
                                                                    <div class="item-img-info">
                                                                        <a href="@Anpero.StringHelpper.GetProductLink(items.PrName,items.Id)" title="@items.PrName" class="product-image">
                                                                            <img src="@items.Images" alt="@items.PrName">
                                                                        </a>
                                                                        <div class="new-label new-top-left">New</div>
                                                                        <div class="item-box-hover">
                                                                            <div class="box-inner">
                                                                                <div class="product-detail-bnt"><a class="button detail-bnt" type="button"><span>Quick View</span></a></div>
                                                                                <div class="actions">
                                                                                    <span class="add-to-links">
                                                                                        <a href="#" class="link-wishlist" title="Add to Wishlist">
                                                                                            <span>Add to Wishlist</span>
                                                                                        </a>
                                                                                        <a href="#" class="link-compare add_to_compare" title="Add to Compare">
                                                                                            <span>Add to Compare</span>
                                                                                        </a>
                                                                                    </span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="item-info">
                                                                    <div class="info-inner">
                                                                        <div class="item-title"><a href="@Anpero.StringHelpper.GetProductLink(items.PrName,items.Id)" title="@items.PrName">@items.PrName</a> </div>
                                                                        <div class="item-content">
                                                                            <div class="rating">
                                                                                <div class="ratings">
                                                                                    <div class="rating-box">
                                                                                        <div class="rating" style="width:80%"></div>
                                                                                    </div>
                                                                                    <p class="rating-links"><a href="#">1 Đánh giá</a> <span class="separator">|</span> <a href="#">Đánh giá</a> </p>
                                                                                </div>
                                                                            </div>
                                                                            <div class="item-price">
                                                                                <div class="price-box"><span class="regular-price" id="product-price-1"><span class="price">@items.Price</span> </span> </div>
                                                                            </div>
                                                                            <div class="add_cart">
                                                                                <button class="button btn-cart" type="button"><span>Mua ngay</span></button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!-- End Item -->
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts{
        <script type="text/javascript" src="~/assets/js/jquery.flexslider.js"></script>
        <script type="text/javascript" src="~/assets/js/jquery.bxslider.min.js"></script>
        <script type="text/javascript" src="~/assets/js/cloud-zoom.js"></script>
    }
}

