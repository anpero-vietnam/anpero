
@{
    ViewBag.Title = "Checkout";
}
<div class="columns-container">
    <div class="container" id="columns">
        <!-- breadcrumb -->
        <div class="breadcrumb clearfix">
            <a class="home" href="#" title="Return to Home">Home</a>
            <span class="navigation-pipe">&nbsp;</span>
            <span class="navigation_page">Tạo đơn hàng</span>
        </div>
        <!-- ./breadcrumb -->
        <!-- page heading-->
        <h2 class="page-heading">
            <span class="page-heading-title2">Tạo đơn hàng</span>
        </h2>
        <!-- ../page heading-->
        <div class="page-content checkout-page">
            <h3 class="checkout-sep">1. Thông tin khách hàng</h3>
            <div class="box-border">
                <ul>
                    <li class="row">

                        <div class="col-sm-12">
                            <label for="first_name_1" class="required">Họ tên (*)</label>
                            <input class="input form-control" type="text" name="" id="cName">
                        </div>

                    </li>
                    <li class="row">
                        <div class="col-sm-6">
                            <label for="company_name_1">Số điện thoại (*)</label>
                            <input class="input form-control" type="text" name="" id="cPhoe">
                        </div>
                        <div class="col-sm-6">
                            <label for="company_name_1">Email</label>
                            <input class="input form-control" type="text" name="" id="cMail">
                        </div><!--/ [col] -->

                        <div class="col-sm-12">
                            <label for="email_address_1" class="required">Địa chỉ (*)</label>
                            <textarea class="input form-control" name="" id="cAddress"></textarea>

                        </div><!--/ [col] -->

                    </li>
                </ul>

            </div>
            <h3 class="checkout-sep">2. Phương thức vận chuyển</h3>
            <div class="box-border">
                <ul class="shipping_method">
                    <li>
                        <p class="subcaption bold">Tại cửa hàng</p>
                        <label for="radio_button_3"><input type="radio" checked name="radio_3" id="radio_button_3" value="0">Miễn phí 0đ</label>
                    </li>

                    <li>
                        <p class="subcaption bold">Giao hàng tận nơi</p>
                        <label for="radio_button_4"><input type="radio" name="radio_3" id="radio_button_4"> Vận chuyển thường 40.000đ</label>
                    </li>
                    <li>
                        <p class="subcaption bold">Free Shipping</p>
                        <label for="radio_button_5"><input type="radio" name="radio_5" id="radio_button_5"> Vận chuyển nhanh 80.000đ</label>
                    </li>
                </ul>
            </div>

            <h3 class="checkout-sep">6. Thông tin sản phẩm</h3>
            <div class="box-border">
                <table class="table table-bordered table-responsive cart_summary">
                    <thead>
                        <tr>
                            <th class="cart_product">Ảnh</th>
                            <th>Thông tin</th>
                            <th>Tình trạng.</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Tổng</th>
                            <th class="action"><i class="fa fa-trash-o"></i></th>
                        </tr>
                    </thead>
                    <tbody id="prCatCtTable"></tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2" rowspan="2"></td>
                            <td colspan="3">Total products (tax incl.)</td>
                            <td colspan="2">122.38 €</td>
                        </tr>
                        <tr>
                            <td colspan="3"><strong>Total</strong></td>
                            <td colspan="2"><strong>122.38 €</strong></td>
                        </tr>
                    </tfoot>
                </table>
                <button class="button pull-right">Đặt hàng</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(window).load(function () {
            Cart.bindCartTable();
        });
    </script>
}
