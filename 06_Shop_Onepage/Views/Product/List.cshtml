<div class="container section-padding section-relative">     
        <div class="row">
            @Html.Partial("product/_MenuAndAdsPartial")
           @if (ViewData["FeatureArticle"] != null)
           {
               SearchArticleResults FeatureArticle = (SearchArticleResults)ViewData["FeatureArticle"];
            <section class="blog-area section-padding" id="blog">
                <div class="container">
                    <div class="row">
                        <div class="text-center col-xs-12 col-sm-8 col-sm-offset-2">
                            <div class="page-title">
                                <h2>Cập nhật và hướng dẫn</h2>
                                <p>Xem thêm các cập nhật về hệ thống quản lý web bán hàng tại đây <a href="/blog" title="Thiết kế web bán hàng tốt nhất">Xem thêm tại đây</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="row blog-slide">
               @foreach (BlogItem item in FeatureArticle.ItemList)
                {
                            <div class="col-xs-12 wow fadeIn">
                                <div class="single-blog">
                                    <div class="blog-photo">
                                        <a href="@Anpero.StringHelpper.GetArticleLink(item.Title, item.Id)"><img src="@item.Thumb" alt="@item.Title"></a>
                                        <div class="blog-date">
                                            <h3><span>@Anpero.StringHelpper.ConvertTimeVN(item.CreateDate)</span></h3>
                                        </div>
                                    </div>
                                    <h2>@Anpero.StringHelpper.SubString(30, item.Title)</h2>
                                    <p>@Anpero.StringHelpper.SubString(50, item.ShotDesc)</p>
                                    <a href="@Anpero.StringHelpper.GetArticleLink(item.Title, item.Id)">@Anpero.StringHelpper.SubString(30, item.Title)</a>
                                    <a href="@Anpero.StringHelpper.GetArticleLink(item.Title, item.Id)">Chi tiết</a>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </section>
           }
            <div class="center_column col-xs-12 col-sm-9" id="center_column">

                @if (ViewData["productList"] != null)
                {
                    AnperoFrontend.WebService.SearchResult productList = (AnperoFrontend.WebService.SearchResult)ViewData["productList"];
                    if (productList.Item.Length > 0)
                    {
                        <div id="view-product-list" class="view-product-list">
                            <h2 class="page-heading">
                                @if (ViewBag.isParent != null)
                                {
                                    <span class="page-heading-title">@productList.Item[0].ParentCatName</span>
                                }
                                else
                                {
                                    <span class="page-heading-title">@productList.Item[0].CatName</span>
                                }
                            </h2>                          
                            <ul class="row product-list grid">
                                @foreach (AnperoFrontend.WebService.ProductItem item in productList.Item)
                                {
                                    <li class="col-sx-12 col-sm-4">
                                        <div class="product-container">
                                            <div class="left-block">
                                                <a href="@Anpero.StringHelpper.GetProductLink(item.PrName, item.Id)">
                                                    <img class="img-responsive" alt="@item.PrName" src="@item.Images" />
                                                    @if (item.Rank > 1)
                                                    {
                                                        <div class="featured-text"><span>Bán chạy</span></div>
                                                    }
                                                </a>
                                                @if (item.IsSale)
                                                {
                                                    <div class="price-percent-reduction2">giảm @Anpero.StringHelpper.ConVertToMoneyFormatInt((item.Price - item.SalePrice).ToString())</div>
                                                }
                                                <div class="quick-view">
                                                    <a title="Quick view" class="search" href="@Anpero.StringHelpper.GetProductLink(item.PrName, item.Id)"></a>
                                                </div>
                                                <div class="add-to-cart">
                                                    <a title="Add to Cart" href="javascript:Cart.addProduct(@item.Id,'@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.Price)','@item.Images','@item.PrName')">thêm vào giỏ hàng</a>
                                                </div>
                                            </div>
                                            <div class="right-block">
                                                <h5 class="product-name"><a href="@Anpero.StringHelpper.GetProductLink(item.PrName, item.Id)">@item.PrName</a></h5>
                                                @if (item.Rank > 1)
                                                {
                                                    <div class="product-star">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star-half-o"></i>
                                                    </div>
                                                }
                                                @if (item.IsSale)
                                                {
                                                    <div class="content_price">
                                                        <span class="price product-price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.SalePrice)</span>
                                                        <span class="price old-price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.Price)</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="content_price">
                                                        <span class="price product-price">@Anpero.StringHelpper.ConVertToMoneyFormatInt(item.Price.ToString())</span>
                                                    </div>
                                                }
                                                <div class="info-orther">
                                                    <p>Item Code: # @item.Id</p>
                                                    @if (item.IsInstock)
                                                    {
                                                        <p class="availability">Trạng thái: <span>Còn hàng</span></p>
                                                    }
                                                    else
                                                    {
                                                        <p class="availability">Trạng thái: <span>Hết hàng</span></p>
                                                    }
                                                    <div class="product-desc">
                                                        @Html.Raw(item.ShortDesc)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                          
                        </div>
                        <div class="sortPagiBar">
                            <div class="bottom-pagination">
                                <nav>
                                    @Html.Raw(ViewBag.page)
                                </nav>
                            </div>
                         </div>
                        
                    }
                  
                }
        </div>

    </div>
</div>

@section scripts{

    <script src="/assets/js/owl-carousel-min.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            $(".blog-slide").owlCarousel({
                items: 3,
                loop: true,
                autoplay: true,
                autoplayTimeout: 7000,
                smartSpeed: 1000,
                responsive: {
                    // breakpoint from 0 up
                    0: {
                        items: 1,
                    },
                    // breakpoint from 480 up
                    480: {
                        items: 2,
                    },
                    // breakpoint from 768 up
                    768: {
                        items: 3,
                    }
                }
            });
        });
    </script>

    <script src="/Scripts/Bootrap.notify.js"></script>
}
