            <div class="row">
                <div class="col-xs-12 col-sm-5">
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="/assets/images/455x480.png" alt="thiết kế web bán hàng">
                        </div>
                        <div class="item">
                            <img src="/assets/images/slide2.jpg" alt="thiết kế web quản lý bán hàng">
                        </div>
                        <div class="item">
                            <img src="/assets/images/slide3.png" alt="web bán hàng giá rẻ">
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-7">
                    <ol class="carousel-indicators">
                        <li data-target="#photographyCarousel" data-slide-to="0" class="active">
