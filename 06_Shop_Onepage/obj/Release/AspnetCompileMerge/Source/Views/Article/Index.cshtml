@using AnperoFrontend.WebService;
@{
    BlogItem item = new BlogItem();
    if (ViewData["blogdeltail"] != null)
    {
        item = (BlogItem)ViewData["blogdeltail"];
    }
}
<section class="photography-area section-padding" id="philosophy">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12 col-sm-12">
                <div class="breadcrumb clearfix">
                    <a class="home" href="/" title="Return to Home">Home</a>
                    <span class="fa fa-caret-right">&nbsp;</span>
                    <a class="home" href="#" title="Blog">Blog</a>
                    <span class="fa fa-caret-right">&nbsp;</span>
                    <span><a href="@Anpero.StringHelpper.GetBlogCategoryLink(item.CategoryName, item.CategoryId)" title="@item.CategoryName">@item.CategoryName</a> </span>
                </div>
            </div>
            @Html.Partial("article/_MenuAndAdsPartial")
            <div class="col-md-9 col-xs-9 col-sm-12">
                <article class="entry-detail">
                    <div class="page-title text-center ">
                        <h2>@item.Title</h2>
                    </div>
                    <div id="photographyCarousel" class="carousel slide carousel-fade" data-ride="carousel">
                        <div class="col-xs-12 col-sm-12">@Html.Raw(item.Content)</div>
                        <div class="entry-meta-data">
                            <span class="comment-count">
                                <i class="fa fa-eye"></i> @item.ViewTime
                            </span>
                            <span class="date"><i class="fa fa-calendar"></i> @Anpero.StringHelpper.ConvertTimeVN(item.CreateDate)</span>
                        </div>
                    </div>

                    <div class="content-text clearfix"></div>
                    @*<div class="entry-tags">
                            <span>Tags:</span>
                            @item.Tag
                        </div>*@
                </article>
            </div>
        </div>
    </div>
</section>
